#include <stdio.h>
#include <stdlib.h> // For malloc, in case VLA isn't supported


int linearSearch(int arr[], int n, int target) {
    // Iterate through each element
    for (int i = 0; i < n; i++) {
        // Check if the current element matches the target
        if (arr[i] == target) {
            return i; // Found it! Return the index.
        }
    }
    
    // Loop finished, element was not found
    return -1;
}

int main() {
    int n; // To store the size of the array
    int target; // To store the element to search for
    
    // --- 1. Get Array Size ---
    printf("Enter the number of elements in the array: ");
    scanf("%d", &n);
    
    // Check for valid size
    if (n <= 0) {
        printf("Invalid array size.\n");
        return 1; // Exit with an error
    }

    // --- 2. Create Array ---
    int arr[n]; 
    
    // --- 3. Get Array Elements ---
    printf("Enter %d elements:\n", n);
    for (int i = 0; i < n; i++) {
        printf("Element[%d]: ", i);
        scanf("%d", &arr[i]);
    }
    
    // --- 4. Get Target Element ---
    printf("\nEnter the target element to search for: ");
    scanf("%d", &target);
    
    // --- 5. Perform Search ---
    int resultIndex = linearSearch(arr, n, target);
    
    // --- 6. Print Result ---
    if (resultIndex != -1) {
        printf("\nElement %d found at index: %d\n", target, resultIndex);
    } else {
        printf("\nElement %d not found in the array.\n", target);
    }
    
    return 0;
}
